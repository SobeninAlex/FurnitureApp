<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shopping_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.furnitureapp.fragments.shopping.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_productsDetailFragment"
            app:destination="@id/productsDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.furnitureapp.fragments.shopping.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_productsDetailFragment"
            app:destination="@id/productsDetailFragment" />
        <action
            android:id="@+id/action_searchFragment_to_modalBottomSheetFragment"
            app:destination="@id/modalBottomSheetFragment" />
    </fragment>

    <fragment
        android:id="@+id/cartFragment"
        android:name="com.example.furnitureapp.fragments.shopping.CartFragment"
        android:label="CartFragment"
        tools:layout="@layout/fragment_cart" >
        <action
            android:id="@+id/action_cartFragment_to_productsDetailFragment"
            app:destination="@id/productsDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.furnitureapp.fragments.shopping.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/productsDetailFragment"
        android:name="com.example.furnitureapp.fragments.shopping.ProductsDetailFragment"
        android:label="ProductsDetailFragment"
        tools:layout="@layout/fragment_product_details">
        <argument
            android:name="product"
            app:argType="com.example.furnitureapp.data.Product" />
    </fragment>

    <fragment
        android:id="@+id/modalBottomSheetFragment"
        android:name="com.example.furnitureapp.fragments.shopping.ModalBottomSheetFragment"
        android:label="ModalBottomSheetFragment"
        tools:layout="@layout/fragment_modal_bottom_sheet">

    </fragment>

</navigation>